            <div class="footer-widget subscribe-widget">
              <h2 class="widget-title">Socials</h2>
              <div class="widget-content">


                <ul class="social-links">
                  <% @welcomes.each do |w| %>

                  <li><a href="<%= w.twitter%>"><i class="fab fa-twitter"></i></a></li>
                  <li><a href="<%= w.footer%>"><i class="fab fa-google-plus-g"></i></a></li>
                  <li><a href="<%= w.ln %>"><i class="fab fa-linkedin-in"></i></a></li>
