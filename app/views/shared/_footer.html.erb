
<footer class="main-footer" style="background-image: url(<%= asset_path "background/12.png" %>);">
  <div class="auto-container">
    <!--Widgets Section-->
    <div class="widgets-section">
      <div class="row">
        <!--Footer Column-->
        <div class="footer-column col-xl-4 col-lg-5 col-md-12 col-sm-12">
          <% if Welcome.exists? %>
          <% @welcomes.each do |w| %>
          <div class="footer-widget about-widget">
            <div class="footer-logo">
              <figure class="image">
                <%= link_to w do %>
                <%= image_tag w.logoimg_url.to_s %>
                <% end %>
              </figure>                      </div>
              <div class="widget-content">
                <div class="text"><%= w.desc %></div>
                <ul class="contact-list">
                  <li><span class="fa fa-map-marker"></span> <%= w.address %>.</li>
                  <li><span class="fa fa-envelope"></span> <a href="mailto:<%= w.footer %>"><%= w.footer %></a></li>
